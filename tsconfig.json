{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "jsx":"react",
    },
    "include": [
      "**/*.ts",
      "**/*.tsx",
    ],
    "exclude": [
      "node_modules"
    ]
}
